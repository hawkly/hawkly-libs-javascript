  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "address": "localhost",
      "port": 5858,
      "outFiles": [
        "lib"
      ]
    },
    {
      "type": "node2",
      "request": "launch",
      "name": "Launch index.spec.js",
      "program": "${workspaceRoot}/lib/index.spec.js",
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "runtimeArgs": [
        "${workspaceRoot}/node_modules/ava/profile.js"
      ]
    }
  ]
}
